Config { font = "xft:Bitstream Vera Sans Mono:size=9:antialias=true"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 100
       , commands = [ 
						Run Date "%a %b%_d | %k:%M" "date" 10,
						Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ <fc=#DDDDDD>%date%</fc> "
       }
